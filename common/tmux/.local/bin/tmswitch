#!/usr/bin/env bash

prompt="Session to switch to > "

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(tmux ls | grep -v "Home ğŸ " | grep -v "Wiki ğŸ“š" |
        cut -d ":" -f1 | fzf --prompt "${prompt}")
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux switch-client -t "$selected"
